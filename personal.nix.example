# Personal configuration template
# Copy this file to personal.nix and fill in your own values
# personal.nix is gitignored and won't be committed
{
  # System configuration
  hostname = "your-hostname"; # Run: scutil --get ComputerName (macOS) or hostname (Linux)
  username = "your-username"; # Run: whoami

  # Git configuration
  git = {
    userName = "Your Name";
    userEmail = "your.email@example.com";
  };

  # ============================================================================
  # Multi-platform options (optional)
  # ============================================================================

  # WSL2 flag - set to true when using WSL2
  # This flag is used to:
  # - Filter out packages that don't work in WSL2 (e.g., wl-clipboard)
  # - Enable WSL2-specific settings in machines/linux/wsl2.nix
  # isWSL = false;

  # Windows username (for WSL2 only)
  # Set this if your Windows username differs from your WSL username
  # Used to set WINDOWS_HOME environment variable
  # windowsUsername = "your-windows-username";
}
